<h1>Cards#show</h1>
<p>Find me in app/views/cards/show.html.erb</p>


<% @order_items.each do |item| %>
  <h3> <%= item.item.title %> </h3>
  <h5> <%= item.item.price %> </h5>


  <%= form_for item, remote: true do |f| %>
    <%= f.hidden_field :item_id, :value=>item.item.id %>
    <%= f.number_field :quantity, :value=> item.quantity.to_i %>
    <%= f.submit "Update Card"%>

    <%= link_to "Remove item", order_item_path(item), method: :delete, remote: true %>
  <% end %>
  <h2>Subtotal: <%= item.total%>
<% end %>



<h3>Your current card value a subtotal of: <%= current_order.subtotal %></h3>
