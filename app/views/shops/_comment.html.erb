<% @item.comments.each do |comment| %>
  <div class="review_item">
    <div class="media">
      <div class="d-flex">
        <%# <img src="img/product/review-1.png" alt=""> %>
        <%= image_tag comment.user.avatar, class: "comment-avatar"%>
      </div>
      <div class="media-body">
        <h4><%= comment.name %></h4>
        <h5>12th Feb, 2018 at 05:56 pm</h5>
        <% if current_user.id === comment.user_id %>
        <%= link_to "Edit", edit_comment_path(comment),  class: "reply_btn", style: "margin-right: 120px" %>
        <%= link_to "Delete", comment_path(comment), method: :delete, remote: true, class: "me-n5 reply_btn" %>
        <% end %>
      </div>
    </div>
    <p><%= comment.description %></p>
  </div>
<% end %>

